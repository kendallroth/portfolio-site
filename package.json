  "private": true,
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/kendallroth/portfolio-site.git"
  },
  "scripts": {
    "build": "gridsome build",
    "eslint": "eslint \"src/**/*.{js,vue}\"",
    "format": "prettier --config .prettierrc --write \"src/**/*.{js,vue}\"",
